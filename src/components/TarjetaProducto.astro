---
// src/components/TarjetaProducto.astro
interface Props {
  producto: {
    id: string;
    nombre: string;
    descripcion?: string; // Descripci√≥n es opcional
    imagen: string;
    url: string;
  };
}

const { producto } = Astro.props;
---
<a href={producto.url} target="_blank" rel="noopener noreferrer" class="group block bg-white rounded-lg shadow-md overflow-hidden border-2 border-transparent transition-all duration-300 hover:border-red-500 hover:shadow-xl hover:-translate-y-1">
  <div class="h-56 overflow-hidden">
    <img
      src={producto.imagen}
      alt={`Imagen de ${producto.nombre}`}
      class="w-full h-full object-cover transform transition-transform duration-500 group-hover:scale-110"
    />
  </div>
  <div class="p-4">
    <h3 class="text-lg font-bold text-gray-800 truncate">{producto.nombre}</h3>
    {producto.descripcion && <p class="text-sm text-gray-600 mt-1 line-clamp-2">{producto.descripcion}</p>}
  </div>
</a>