---
// src/components/TarjetaSubcategoria.astro
export interface Props {
    nombre: string;
    imagen: string;
    url: string;
    links: { nombre: string; url: string }[];
}

const { nombre, imagen, url, links } = Astro.props;
---

<a href={url} class="group relative block w-full aspect-square overflow-hidden rounded-lg shadow-lg">
  <img 
    src={imagen} 
    alt={`Imagen de ${nombre}`}
    class="w-full h-full object-cover transition-all duration-500 ease-in-out group-hover:scale-125 group-hover:blur-sm group-hover:brightness-50"
  />

  <div class="absolute inset-0 bg-black/50 flex flex-col justify-between p-6 opacity-0 group-hover:opacity-100 transition-opacity duration-500">
    <div>
      <h3 class="text-white text-3xl font-bold">{nombre}</h3>
    </div>

    <div class="text-center">
      <img src="/imagenes/logo-rusticos-mendoza.png" alt="Logo" class="h-12 mx-auto mb-4 invert brightness-0" />
      <div class="flex justify-center space-x-4">
        {links.map(link => (
          <a href={link.url} class="text-white font-semibold hover:text-red-500 transition-colors">
            {link.nombre}
          </a>
        ))}
      </div>
    </div>
  </div>
</a>