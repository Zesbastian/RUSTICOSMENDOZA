---
// src/layouts/Layout.astro
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="es" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Rústicos Mendoza - Marmolería de primera calidad en Mendoza. Mesadas, revestimientos, pisos y más." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	
	<body class="bg-gray-50 text-gray-800 font-sans flex flex-col min-h-screen">
		<Navbar />

		{/*
		  CAMBIO IMPORTANTE AQUÍ:
		  - La etiqueta <main> ahora tiene "flex-grow", lo que le permite
			expandirse y ocupar todo el espacio disponible entre el Navbar y el Footer.
			Esto es lo que permitirá que nuestra página de "pisos" ocupe toda la pantalla.
		*/}
		<main class="flex-grow flex flex-col">
			<slot />
		</main>

		<Footer />
	</body>
</html>